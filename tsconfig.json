{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "declaration": true,
        "removeComments": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/node_modules/*", "dist", "**/dist/*", "*.d.ts"],
}
